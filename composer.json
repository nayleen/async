{
  "name": "nayleen/async",
  "description": "Building blocks for async applications.",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "ext-pcntl": "*",
    "ext-posix": "*",
    "amphp/amp": "^3",
    "amphp/log": "^2",
    "amphp/parallel": "^2",
    "amphp/serialization": "^1",
    "dragonmantank/cron-expression": "^3",
    "nayleen/finder": "~0",
    "php-di/php-di": "^7",
    "revolt/event-loop": "^1",
    "roave/better-reflection": "^6.11",
    "symfony/clock": "^6"
  },
  "require-dev": {
    "amphp/cache": "^2",
    "amphp/http": "^2",
    "amphp/http-server": "^3",
    "amphp/redis": "^2",
    "bnf/phpstan-psr-container": "^1.0",
    "jetbrains/phpstorm-stubs": "@dev",
    "nayleen/codestandard": "dev-latest",
    "nayleen/development-dependencies": "^3",
    "roave/security-advisories": "dev-latest"
  },
  "suggest": {
    "ext-igbinary": "To use igbinary serializer",
    "ext-msgpack": "To use msgpack serializer",
    "amphp/http-server": "To run http server workers",
    "amphp/redis": "To use Redis as worker cache",
    "amphp/websocket-server": "For websocket request handler support",
    "nayleen/async-bus": "For distributed event processing"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Nayleen\\Async\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nayleen\\Async\\": [
        "tests/Functional",
        "tests/Integration",
        "tests/Unit"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "phpstan/extension-installer": true
    },
    "lock": false,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-main": "0.8.x-dev"
    }
  }
}
